{
  "manifest_version": 2,
  "name": "KeyReel - Smart Security Assistant",
  "short_name": "KeyReel",
  "author": "Auxoft LLC",
  "description": "KeyReel - the most convenient and secure password manager, saves passwords on your phone and automatically fills them on your computer.",
  "version": "20.7.9.0",

  "homepage_url": "https://www.keyreel.io",
  "default_locale": "en",

  "applications": {
    "gecko": {
    	"id": "keyreel@keyreel.io",
    	"strict_min_version": "57.0"
    }
  },

  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },

  "background": {
    "scripts": [
      "js/browser-polyfill.min.js",
      "js/background.min.js"
    ],
    "persistent": true
  },

  "content_scripts": [{
    "all_frames": true,
    "match_about_blank": true,
    "run_at": "document_start",
    "js": [
      "js/browser-polyfill.min.js",
      "js/content.min.js"
    ],
    "matches": [
      "http://*/*",
      "https://*/*",
      "file:///*"
    ]
  }],

  "permissions": [
    "storage",
    "webNavigation",
    "activeTab",
    "privacy",
    "http://*/*",
    "https://*/*",
    "file://*/*",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "nativeMessaging"
  ],

  "browser_action": {
    "default_icon": "img/browser_action_icon_inactive_38x38.png",
    "default_title": "KeyReel Service is not running",
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    "img/*.png",
    "js/*.map",
    "js/*.js",
    "css/*.css"
  ]
}
